<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".Activities.Fragment.BookingFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:id="@+id/ll1">

        <ImageView
            android:id="@+id/ivBackMessageBooking"
            android:layout_width="15sp"
            android:layout_height="20sp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="20sp"
            android:src="@drawable/close" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="Available"
            android:textSize="20sp" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:id="@+id/v1"
        android:layout_below="@+id/ll1"
        android:background="#BDBDBD"/>
    <LinearLayout
        android:id="@+id/l2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v1"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0sp"
            android:layout_weight="0.4"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvStime"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6:00"/>
            <TextView
                android:id="@+id/tvSDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Date"/>
        </LinearLayout>
        <View
            android:layout_width="2sp"
            android:layout_height="match_parent"
            android:background="@color/graycolor"/>

        <LinearLayout
            android:layout_width="0sp"
            android:layout_weight="0.4"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvEtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="6:00"/>
            <TextView
                android:id="@+id/tvEdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End Date"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:id="@+id/v2"
        android:layout_below="@+id/l2"
        android:background="#eee"
        android:layout_marginTop="15sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v2"
        android:layout_margin="20sp"
        android:layout_gravity="right"
        android:layout_alignParentRight="true"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Amount"/>
    <TextView
        android:id="@+id/tvAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/orangecolor"
        android:textSize="17sp"
        android:layout_gravity="right"
        android:textStyle="bold"
        android:text="Price"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:text="Send Message" />
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:id="@+id/c1"
            android:layout_below="@+id/t1"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp">
            <EditText
                android:id="@+id/etMessageBoat"
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:hint="Text Message Here"
                android:gravity="start"
                android:background="@null"
                android:padding="10sp"/>
        </android.support.v7.widget.CardView>
        <Button
            android:id="@+id/btnBookBoat"
            android:layout_width="250sp"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:foreground="@drawable/ripple_effect_orange"
            android:layout_centerInParent="true"
            android:layout_marginBottom="20sp"
            android:background="@drawable/orangeroundboundry"
            android:text="Book Now"
            android:textAllCaps="false"
            />
    </LinearLayout>
</LinearLayout>
        <com.comix.overwatch.HiveProgressView
            android:id="@+id/progressMessage"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            app:hive_animDuration="5000"
            app:hive_color="@color/colorAccent"
            app:hive_maxAlpha="255"
            app:hive_rainbow="false"
            app:hive_cornerRadius="20"
            app:hive_shrink="true"
            />
    </FrameLayout>
</RelativeLayout>