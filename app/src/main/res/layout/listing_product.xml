<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/listing_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's you make money renting your boat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"/>


    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listing_title"
        android:layout_marginTop="50sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:src="@drawable/gallery"/>
        <TextView
            android:layout_width="0sp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:text="Gallery"
            android:layout_marginLeft="15sp"
            android:layout_gravity="center"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="17sp"
            android:layout_height="17sp"
            android:layout_gravity="center"
            android:src="@drawable/uparrow"/>

    </LinearLayout>


    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        android:layout_margin="20sp"
        android:layout_below="@+id/ll"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_below="@+id/cv"
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:orientation="horizontal"
        android:layout_marginRight="20sp"
        android:layout_marginLeft="20sp">

        <ImageView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:src="@drawable/dollar"/>

        <TextView
            android:layout_width="0sp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:text="Set Pricing"
            android:layout_marginLeft="20sp"
            android:textColor="@color/graycolor"
            android:textSize="17sp"/>
        <ImageView
            android:layout_width="17sp"
            android:layout_height="17sp"
            android:layout_gravity="center"
            android:src="@drawable/downarrow"/>

    </LinearLayout>

    <View
        android:layout_below="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:layout_marginTop="10sp"
        android:background="#eee"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"/>

<Button
    android:layout_width="200sp"
    android:layout_height="40sp"
    android:background="@drawable/grayboundry"
    android:text="Publish"
    android:textAllCaps="false"
    android:layout_marginBottom="20sp"
    android:layout_centerInParent="true"
    android:layout_alignParentBottom="true"
    android:gravity="center"/>

</RelativeLayout>