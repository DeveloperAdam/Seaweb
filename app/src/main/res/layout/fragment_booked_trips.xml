<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".Activities.Fragment.Trips.BookedTripsFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Booked Trips"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="20sp"
        android:textColor="#757575"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20sp"
        android:id="@+id/rvBookedTrips"/>
        <com.comix.overwatch.HiveProgressView
            android:id="@+id/progressBookedTrips"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            app:hive_animDuration="5000"
            app:hive_color="@color/colorAccent"
            app:hive_maxAlpha="255"
            app:hive_rainbow="false"
            app:hive_cornerRadius="20"
            app:hive_shrink="true"
            />
    </FrameLayout>
</LinearLayout>