<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    tools:context=".Activities.Fragment.BoatTypeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:id="@+id/ll1"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15sp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBackBoatTypes"
            android:layout_width="15dp"
            android:layout_height="15sp"
            android:layout_gravity="center"
            android:src="@drawable/cross" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30sp"
            android:layout_marginLeft="20sp"
            android:layout_gravity="center"
            android:src="@drawable/boat" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Locations"
            android:textStyle="bold"
            android:textColor="#BDBDBD"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginLeft="20sp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#BDBDBD"/>
    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:id="@+id/rvBoatTypes">
    </android.support.v7.widget.RecyclerView>

    <Button
        android:layout_width="200sp"
        android:layout_height="40sp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20sp"
        android:background="@drawable/orangeroundboundry"
        android:textColor="@color/orangecolor"
        android:text="Save"
        android:textAllCaps="false"
        android:id="@+id/btnSaveBoatType"
        />


</RelativeLayout>