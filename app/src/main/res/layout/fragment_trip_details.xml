<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".Activities.Fragment.Trips.TripDetailsFragment">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250sp"
        android:background="#eee"
        android:scaleType="fitXY"
        android:id="@+id/ivTripDetails"/>
        <ImageView
            android:id="@+id/ivHeartTripDetails"
            android:layout_width="22dp"
            android:layout_height="24dp"
            android:src="@drawable/white_heart"
            android:layout_gravity="right"
            android:layout_margin="20sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBackTripDetail"
            android:layout_width="20sp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10sp"
            android:src="@drawable/whiteback" />

        <TextView
            android:layout_width="0sp"
            android:layout_weight="0.9"
            android:gravity="center"
            android:layout_marginRight="30sp"
            android:layout_height="wrap_content"
            android:text="Trip Details"
            android:textSize="17sp"
            android:textColor="#fff"
            android:textStyle="bold"/>
    </LinearLayout>

    </FrameLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvListedBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Listed By"
                android:layout_gravity="center"
                android:layout_marginRight="20sp"
                android:textSize="17sp"
                android:textStyle="italic"/>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivUserTripDetail"
                    android:layout_gravity="right"
                    android:layout_width="70sp"
                    android:layout_height="70sp"
                    android:src="@drawable/profile" />
                <TextView
                    android:layout_width="100sp"
                    android:layout_height="20sp"
                    android:text="Professional"
                    android:layout_marginRight="5sp"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:textColor="@color/color_white"
                    android:background="@drawable/orangefill"
                    />
            </FrameLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_marginTop="5sp"
            android:background="#BDBDBD"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5sp"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/tvTripTitleDetails"
        android:layout_width="0sp"
        android:layout_weight="0.7"
        android:layout_height="wrap_content"
        android:text="Title"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="17sp"/>

    <TextView
        android:id="@+id/tvPriceListTripDetails"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="Price List"
        android:layout_marginRight="5sp"
        android:textStyle="bold"
        android:layout_marginLeft="20sp"
        android:textSize="17sp"/>
    <ImageView
        android:layout_width="17sp"
        android:layout_height="17sp"
        android:layout_gravity="center"
        android:layout_marginRight="20sp"
        android:src="@drawable/rightarrow"/>
</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duration:"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="17sp"/>

        <TextView
            android:id="@+id/tvDurationTripDetails"
            android:layout_width="0sp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10dp"
            android:text="4"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/tvLocationTripDetail"
            android:layout_width="0sp"
            android:layout_weight="0.3"
            android:layout_gravity="center"
            android:layout_marginTop="3sp"
            android:layout_height="wrap_content"
            android:text="Trip To"
            android:layout_marginLeft="20sp"
            android:textSize="15sp"/>
</LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="#BDBDBD"
            android:layout_marginTop="10sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0sp"
            android:layout_weight="0.4"
            android:layout_marginLeft="20sp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:textStyle="bold"
                android:textSize="17sp"
                android:text="Check In"/>
    <TextView
        android:id="@+id/tvStartDateTripDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:layout_marginTop="5sp"
        android:textSize="15sp"/>
            <TextView
                android:id="@+id/tvStartTimeTripDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:layout_marginTop="5sp"
                android:textSize="15sp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0sp"
            android:layout_weight="0.3"
            android:layout_marginRight="20sp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginTop="10sp"
                android:textStyle="bold"
                android:textSize="17sp"
                android:text="Check In"/>
            <TextView
                android:id="@+id/tvEndDateTripDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="End "
                android:gravity="right"
                android:layout_marginTop="5sp"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tvEndTimeTripDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginTop="5sp"
                android:text="Time"
                android:textSize="15sp"/>
        </LinearLayout>


</LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="1sp"
    android:layout_marginTop="5sp"
    android:background="#BDBDBD"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0sp"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"
                android:text="Remaining Seats"
                android:textStyle="bold"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tvRemainingSeats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="15sp"/>
        </LinearLayout>
        <Button
            android:id="@+id/btnBookNowTrip"
            android:layout_width="150sp"
            android:layout_height="40sp"
            android:layout_margin="30sp"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:background="@drawable/orangefill"
            android:text="Book Now"/>
    </LinearLayout>
    </ScrollView>
    </LinearLayout>
    <com.comix.overwatch.HiveProgressView
        android:id="@+id/progressTripDetails"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        app:hive_animDuration="5000"
        app:hive_color="@color/colorAccent"
        app:hive_maxAlpha="255"
        app:hive_rainbow="false"
        app:hive_cornerRadius="20"
        app:hive_shrink="true"
        />
</FrameLayout>

</LinearLayout>