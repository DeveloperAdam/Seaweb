<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".Activities.Fragment.Trips.TripDetailsFragment">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250sp"
        android:background="#EEEE"
        android:id="@+id/ivTripDetails"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ivBackTripDetail"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_marginLeft="20sp"
            android:src="@drawable/whiteback"/>

        <TextView
            android:layout_width="0sp"
            android:layout_weight="0.9"
            android:gravity="center"
            android:layout_marginRight="30sp"
            android:layout_height="wrap_content"
            android:text="Trip Details"
            android:textSize="17sp"
            android:textColor="#fff"
            android:textStyle="bold"/>
    </LinearLayout>

    </FrameLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/tvTripTitleDetails"
        android:layout_width="0sp"
        android:layout_weight="0.7"
        android:layout_height="wrap_content"
        android:text="Title"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="17sp"/>

    <TextView
        android:id="@+id/tvLocationTripDetail"
        android:layout_width="0sp"
        android:layout_weight="0.3"
        android:layout_height="wrap_content"
        android:text="Location"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10dp"
        android:textSize="15sp"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_margin="20sp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvListedBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Listed By"
            android:layout_gravity="center"
            android:layout_marginRight="20sp"
            android:textSize="17sp"
            android:textStyle="italic"/>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivUserTripDetail"
            android:layout_gravity="right"
            android:layout_width="70sp"
            android:layout_height="70sp"
            android:src="@drawable/profile" />
            <TextView
                android:layout_width="100sp"
                android:layout_height="20sp"
                android:text="Professional"
                android:layout_marginRight="5sp"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:textColor="@color/color_white"
                android:background="@drawable/orangefill"
                />
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duration:"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tvDurationTripDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10dp"
        android:textSize="15sp"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0sp"
            android:layout_weight="0.4"
            android:layout_marginLeft="20sp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <TextView
        android:id="@+id/tvStartDateTripDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:layout_marginTop="10dp"
        android:textSize="15sp"/>
            <TextView
                android:id="@+id/tvStartTimeTripDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"

                android:textSize="15sp"/>
        </LinearLayout>
        <TextView
            android:layout_width="0sp"
            android:layout_weight="0.1"
            android:layout_height="wrap_content"
            android:text="To"
            android:textStyle="bold"
            android:layout_marginTop="15sp"
            android:textSize="17sp"/>

        <LinearLayout
            android:layout_width="0sp"
            android:layout_weight="0.4"
            android:layout_marginRight="20sp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvEndDateTripDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End "
                android:layout_marginLeft="20sp"
                android:layout_marginTop="10dp"
                android:layout_gravity="right"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tvEndTimeTripDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:layout_gravity="right"
                android:layout_marginLeft="20sp"
                android:textSize="15sp"/>
        </LinearLayout>
</LinearLayout>


    </LinearLayout>
    </ScrollView>
    </LinearLayout>
    <com.comix.overwatch.HiveProgressView
        android:id="@+id/progressTripDetails"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        app:hive_animDuration="5000"
        app:hive_color="@color/colorAccent"
        app:hive_maxAlpha="255"
        app:hive_rainbow="false"
        app:hive_cornerRadius="20"
        app:hive_shrink="true"
        />
</FrameLayout>
</LinearLayout>