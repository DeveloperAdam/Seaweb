<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:background="#eee"
        android:scaleType="fitXY"
        android:id="@+id/ivFvrttrip"/>
        <ImageView
            android:id="@+id/ivFvrtTripsHeart"
            android:layout_width="22dp"
            android:layout_height="24dp"
            android:src="@drawable/fillheart"
            android:layout_gravity="right"
            android:layout_margin="20sp" />
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="10sp">
        <TextView
            android:id="@+id/tvUsernameFvrtTrips"
            android:layout_width="150sp"
            android:layout_height="25sp"
            android:layout_gravity="center"
            android:layout_marginLeft="10sp"
            android:text="Professional"
            android:gravity="center"
            android:maxLines="1"
            android:paddingLeft="15sp"
            android:textColor="@color/color_white"
            android:background="@drawable/orangefill"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivUserFvrtTrips"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/inboxprofile" />
        <!--app:civ_border_width="2dp"-->
        <!--&lt;!&ndash;app:civ_border_color="#FF000000"/>&ndash;&gt;-->

    </FrameLayout>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvFvrtTripTitle"
            android:layout_width="0sp"
            android:layout_weight="0.9"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:text="Title"/>
        <TextView
            android:id="@+id/tvFvrttripPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:textColor="@color/orangecolor"
            android:textSize="17sp"
            android:textStyle="bold"
            android:text="Price"/>
    </LinearLayout>

</LinearLayout>