<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#BDBDBD"
        app:cardCornerRadius="10dp"
        android:layout_margin="10sp"
        app:cardElevation="3dp"
        android:id="@+id/cvBoat"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200sp">
        <ImageView
            android:id="@+id/ivBoatOnLocImage"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:scaleType="fitXY"
            android:src="@drawable/yacht"/>

                <ImageView
                    android:id="@+id/ivFvrt"
                    android:layout_width="22dp"
                    android:layout_height="24dp"
                    android:layout_gravity="right"
                    android:layout_margin="20sp" />
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_margin="10sp">
                    <TextView
                        android:layout_width="150sp"
                        android:layout_height="25sp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10sp"
                        android:text="Professional"
                        android:gravity="center"
                        android:paddingLeft="15sp"
                        android:textColor="@color/color_white"
                        android:background="@drawable/orangefill"
                        />
                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image"
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:src="@drawable/progile" />
                    <!--app:civ_border_width="2dp"-->
                        <!--&lt;!&ndash;app:civ_border_color="#FF000000"/>&ndash;&gt;-->

                </FrameLayout>
            </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="5sp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0sp"
                android:layout_weight="0.7"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="10sp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:layout_marginLeft="10sp"
                    android:textSize="17sp"/>
                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From 25$ per day"
                    android:layout_marginTop="5sp"
                    android:layout_marginLeft="10sp"
                    android:textColor="@color/orangecolor"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10sp"
                android:layout_marginTop="5sp"
                android:layout_weight="0.3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvLoc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="Place" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:layout_gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price List" />

                    <ImageView
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5sp"
                        android:src="@drawable/forward" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>



</LinearLayout>