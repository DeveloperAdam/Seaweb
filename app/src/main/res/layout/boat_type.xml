<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="17sp"
            android:layout_height="17sp"
            android:layout_gravity="center"
            android:layout_marginLeft="20sp"
            android:src="@drawable/cross"/>


        <ImageView
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:layout_marginLeft="50sp"
            android:layout_gravity="center"
            android:src="@drawable/boat"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Boat Type"
            android:layout_gravity="center"
            android:textSize="20sp"

            android:layout_marginLeft="10sp"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:id="@+id/rvBoatType"></android.support.v7.widget.RecyclerView>


    <Button
        android:layout_width="200sp"
        android:layout_height="40sp"
        android:background="@drawable/orangeroundboundry"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="@color/orangecolor"
        android:foreground="@drawable/ripple_effect_orange"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20sp"/>
</RelativeLayout>