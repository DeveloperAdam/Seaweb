<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".Activities.Fragment.PriceListFragment">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ivClosePriceList"
            android:layout_width="15sp"
            android:layout_height="15sp"
            android:layout_gravity="center"
            android:src="@drawable/close"
            android:layout_marginLeft="20sp"
            />

        <TextView
            android:layout_width="0sp"
            android:layout_weight="0.1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_marginRight="20sp"
            android:textStyle="bold"
            android:text="Price List"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@color/orangecolor"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0sp"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"
            android:text="SEASON"
            android:textColor="#fff"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_marginLeft="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRICE"
            android:textColor="#fff"
            android:layout_marginRight="20sp"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_marginLeft="20sp"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10sp"
        android:id="@+id/rvPriceList"/>
    </LinearLayout>

    <com.comix.overwatch.HiveProgressView
        android:id="@+id/progressPriceList"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        app:hive_animDuration="5000"
        app:hive_color="@color/colorAccent"
        app:hive_maxAlpha="255"
        app:hive_rainbow="false"
        app:hive_cornerRadius="20"
        app:hive_shrink="true"
        />
    <Button
        android:id="@+id/btnMessageScreen"
        android:layout_width="120sp"
        android:layout_height="40sp"
        android:layout_gravity="center"
        android:layout_marginRight="10sp"
        android:background="@drawable/orangefill"
        android:foreground="@drawable/ripple_effect_orange"
        android:text="Price Request"
        android:textAllCaps="false"
        android:textColor="#fff" />

</FrameLayout>

</LinearLayout>