<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".Activities.Fragment.TabFragment">



    <EditText
        android:id="@+id/autoCompleteTextView1"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:drawableLeft="@drawable/mainscreen_search"
        android:paddingLeft="20sp"
        android:drawablePadding="20sp"
        android:layout_marginLeft="20sp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginRight="20sp"
        android:layout_marginTop="10sp"
        android:textColor="#BDBDBD"
        android:textColorHint="#BDBDBD"
        android:background="@drawable/grayroundedboundry"
        android:hint="Type Here The Location" />


    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:layout_width="200sp"
        android:layout_height="50sp"
        app:tabGravity="fill"
        android:layout_below="@+id/autoCompleteTextView1"
        app:tabIndicatorColor="@color/orangecolor"
        app:tabMode="fixed"
        app:tabSelectedTextColor="#BDBDBD"
        app:tabTextColor="#BDBDBD"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="50dp" />

    <android.support.v4.view.ViewPager
        android:layout_below="@+id/tabs"
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        />

</LinearLayout>