<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_white"
    tools:context=".Activities.Fragment.ListOfPlacesFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView1"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:drawableLeft="@drawable/mainscreen_search"
        android:paddingLeft="20sp"
        android:drawablePadding="20sp"
        android:layout_marginLeft="20sp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginRight="20sp"
        android:layout_marginTop="20sp"
        android:textColor="#BDBDBD"
        android:textColorHint="#BDBDBD"
        android:imeOptions="actionSearch"
        android:background="@drawable/grayroundedboundry"
        android:hint="Type Here The Location" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layoutDirection="ltr"
        android:id="@+id/rvListOfPlaces">
    </android.support.v7.widget.RecyclerView>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="ltr"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="55sp"
        android:id="@+id/rvPlaces"></android.support.v7.widget.RecyclerView>
        </LinearLayout>

        <com.comix.overwatch.HiveProgressView
            android:id="@+id/progress"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            app:hive_animDuration="5000"
        app:hive_color="@color/colorAccent"
        app:hive_maxAlpha="255"
        app:hive_rainbow="false"
        app:hive_cornerRadius="20"
        app:hive_shrink="true"
        />
    </FrameLayout>
</LinearLayout>