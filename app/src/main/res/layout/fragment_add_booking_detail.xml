<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    tools:context=".Activities.Fragment.Trips.AddBookingDetailFragment">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
       <LinearLayout
           android:id="@+id/l1"
           android:layout_width="match_parent"
           android:layout_height="50sp"
           android:layout_alignParentTop="true"
           android:orientation="horizontal">

       <ImageView
           android:id="@+id/ivCrossBack"
           android:layout_width="12dp"
           android:layout_height="17sp"
           android:layout_gravity="center"
           android:layout_marginLeft="20sp"
           android:src="@drawable/cross" />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:clickable="false"
           android:focusable="false"
           android:text="Add Details"
           android:textSize="17sp"
           android:layout_marginLeft="30sp"/>
       </LinearLayout>
       <View
           android:layout_width="match_parent"
           android:layout_height="2sp"
           android:id="@+id/v1"
           android:layout_below="@+id/l1"
           android:layout_marginLeft="20sp"
           android:layout_marginRight="20sp"
           android:background="#eee"/>
       <LinearLayout
           android:id="@+id/l2"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/v1"
           android:layout_marginTop="10sp"
           android:layout_marginLeft="20sp"
           android:layout_marginRight="20sp"
           android:orientation="horizontal">
           <LinearLayout
               android:layout_width="0sp"
               android:layout_weight="0.4"
               android:layout_height="wrap_content"
               android:gravity="start"
               android:orientation="vertical">
               <TextView
                   android:id="@+id/tvTfrom"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="6:00"/>
               <TextView
                   android:id="@+id/tvDfrom"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Start Date"/>
           </LinearLayout>
           <View
               android:layout_width="2sp"
               android:layout_height="match_parent"
               android:background="@color/graycolor"/>
           <LinearLayout
               android:layout_width="0sp"
               android:layout_weight="0.4"
               android:gravity="right"
               android:layout_height="wrap_content"
               android:orientation="vertical">
               <TextView
                   android:id="@+id/tvTto"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"

                   android:text="6:00"/>
               <TextView
                   android:id="@+id/tvDto"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="End Date"/>
           </LinearLayout>
       </LinearLayout>
       <View
           android:layout_width="match_parent"
           android:layout_height="2sp"
           android:id="@+id/v2"
           android:layout_below="@+id/l2"
           android:background="#eee"
           android:layout_marginTop="10sp"
           android:layout_marginLeft="20sp"
           android:layout_marginRight="20sp" />
       <LinearLayout
           android:id="@+id/l3"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/v2"
           android:layout_marginLeft="20sp"
           android:layout_marginRight="20sp"
           android:layout_marginBottom="10sp"
           android:layout_marginTop="10sp"
           android:orientation="vertical">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <TextView
                   android:layout_width="0sp"
                   android:layout_weight="0.8"
                   android:layout_height="wrap_content"
                   android:text="Adults"
                   android:textSize="17sp"
                   />
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@drawable/boundry"
                   android:orientation="horizontal">

                   <ImageView
                       android:id="@+id/ivAddAdult"
                       android:layout_width="20sp"
                       android:layout_height="20dp"
                       android:layout_margin="5sp"
                       android:src="@drawable/add" />
                   <View
                       android:layout_width="1sp"
                       android:layout_height="match_parent"
                       android:background="#BDBDBD"/>
                   <TextView
                       android:id="@+id/tvAdults"
                       android:layout_width="25sp"
                       android:gravity="center"
                       android:textSize="17sp"
                       android:layout_gravity="center"
                       android:layout_height="wrap_content"
                       android:text="0"/>
                   <View
                       android:layout_width="1sp"
                       android:layout_height="match_parent"
                       android:background="#BDBDBD"/>
                   <ImageView
                       android:id="@+id/ivMinusAdults"
                       android:layout_width="20sp"
                       android:layout_height="20sp"
                       android:layout_margin="5sp"
                       android:src="@drawable/substract"/>
               </LinearLayout>

           </LinearLayout>

       </LinearLayout>
       <View
           android:layout_below="@+id/l3"
           android:id="@+id/v3"
           android:layout_width="match_parent"
           android:layout_height="2sp"
           android:background="#eee"
           android:layout_marginLeft="20sp"
           android:layout_marginRight="20sp" />
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/v3"
           android:id="@+id/l4"
           android:layout_marginLeft="20sp"
           android:layout_marginRight="20sp"
           android:layout_marginTop="10sp"
           android:layout_marginBottom="10sp"
           android:orientation="vertical">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <TextView
                   android:layout_width="0sp"
                   android:layout_weight="0.8"
                   android:layout_height="wrap_content"
                   android:text="Children"
                   android:textSize="17sp"
                   />
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@drawable/boundry"
                   android:orientation="horizontal">
                   <ImageView
                       android:id="@+id/ivAddChildren"
                       android:layout_width="20sp"
                       android:layout_height="20sp"
                       android:layout_margin="5sp"
                       android:src="@drawable/add"/>
                   <View
                       android:layout_width="1sp"
                       android:layout_height="match_parent"
                       android:background="@color/graycolor"/>
                   <TextView
                       android:id="@+id/tvChildren"
                       android:layout_width="25sp"
                       android:gravity="center"
                       android:textSize="17sp"
                       android:layout_gravity="center"
                       android:layout_height="wrap_content"
                       android:text="0"/>
                   <View
                       android:layout_width="1sp"
                       android:layout_height="match_parent"
                       android:background="@color/graycolor"/>
                   <ImageView
                       android:id="@+id/ivMinusChildren"
                       android:layout_width="20sp"
                       android:layout_height="20sp"
                       android:layout_margin="5sp"
                       android:src="@drawable/substract"/>
               </LinearLayout>

           </LinearLayout>

       </LinearLayout>
       <View
           android:layout_width="match_parent"
           android:layout_height="2sp"
           android:layout_below="@+id/l4"
           android:background="#eee"
           android:id="@+id/v4"
           android:layout_marginLeft="20sp"
           android:layout_marginRight="20sp" />
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="right"
           android:layout_below="@+id/v4"
           android:id="@+id/l5"
           android:layout_alignParentRight="true"
           android:layout_marginLeft="20sp"
           android:layout_marginRight="20sp"
           android:layout_marginTop="10sp"
           android:layout_marginBottom="10sp"
           android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0sp"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"
                android:orientation="vertical">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Remaining Seats"
               android:textStyle="bold"
               android:textSize="17sp"
              />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Seats"
               android:layout_marginTop="3sp"
               android:textSize="17sp"
               android:id="@+id/tvSeats"/>
            </LinearLayout>
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Your Seats"
                   android:textStyle="bold"
                   android:textSize="17sp"
                   />

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="right"
                   android:text="0"
                   android:layout_marginTop="3sp"
                   android:textSize="17sp"
                   android:id="@+id/tvBookingSeats"/>
           </LinearLayout>


       </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l5"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20sp"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/graycolor"
        android:text="Charges"/>
    <TextView
        android:id="@+id/tvCharges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ 0"
        android:layout_marginLeft="10sp"
        android:textColor="@color/orangecolor"/>
    </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_alignParentBottom="true"
           android:gravity="bottom"
           android:orientation="vertical">

           <TextView
               android:id="@+id/t1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="20sp"
               android:text="Send Message" />
       <android.support.v7.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="10sp"
           android:id="@+id/c1"
           android:layout_below="@+id/t1"
           app:cardCornerRadius="10dp"
           app:cardElevation="3dp">
           <EditText
               android:id="@+id/etMessage"
               android:layout_width="match_parent"
               android:layout_height="200sp"
               android:hint="Text Message Here"
               android:gravity="start"
               android:background="@null"
               android:padding="10sp"/>
       </android.support.v7.widget.CardView>
       <Button
           android:id="@+id/btnBook"
           android:layout_width="250sp"
           android:layout_height="40sp"
           android:layout_gravity="center"

           android:foreground="@drawable/ripple_effect_orange"
           android:layout_centerInParent="true"
           android:layout_marginBottom="10sp"
           android:background="@drawable/orangeroundboundry"
           android:text="Book Now"
           android:textAllCaps="false"
           />
       </LinearLayout>
</RelativeLayout>
    <com.comix.overwatch.HiveProgressView
        android:id="@+id/progressAddBookingDetail"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        app:hive_animDuration="5000"
        app:hive_color="@color/colorAccent"
        app:hive_maxAlpha="255"
        app:hive_rainbow="false"
        app:hive_cornerRadius="20"
        app:hive_shrink="true"
        />
</FrameLayout>
</RelativeLayout>