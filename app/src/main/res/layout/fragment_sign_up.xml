<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backimg"
    tools:context=".Activities.Fragment.SignUpFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginLeft="15sp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBackSignUp"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:layout_gravity="center"
            android:src="@drawable/backicon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textStyle="bold"
            android:textColor="@color/color_white"
            android:textSize="17sp"
            android:layout_gravity="center"
            android:layout_marginLeft="20sp"/>
    </LinearLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="50sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"

        >
        <RadioGroup
            android:id="@+id/radioSex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/radioMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I am boat owner"
                android:checked="true"
                android:textColor="#fff"
                android:buttonTint="#fff" />

            <RadioButton
                android:id="@+id/radioFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:buttonTint="#fff"
                android:text="I want to hire excursion or boat" />

        </RadioGroup>


        <EditText
            android:id="@+id/etFirstname"
            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:hint="First Name"
            android:backgroundTint="@color/color_white"
            android:textColorHint="@color/color_white"
            android:textColor="@color/color_white"/>
        <EditText
            android:id="@+id/etLastname"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:hint="Last Name"
            android:backgroundTint="@color/color_white"
            android:textColorHint="@color/color_white"
            android:textColor="@color/color_white"/>
        <EditText
            android:id="@+id/etAreaname"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:hint="Area Name"
            android:backgroundTint="@color/color_white"
            android:textColorHint="@color/color_white"
            android:textColor="@color/color_white"/>
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:backgroundTint="@color/color_white"
            android:textColorHint="@color/color_white"
            android:textColor="@color/color_white"/>
        <EditText
            android:id="@+id/etPass"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:hint="Password"
            android:inputType="textPassword"
            android:backgroundTint="@color/color_white"
            android:textColorHint="@color/color_white"
            android:textColor="@color/color_white"/>
        <EditText
            android:id="@+id/etCpass"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:backgroundTint="@color/color_white"
            android:textColorHint="@color/color_white"
            android:textColor="@color/color_white"/>


        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_margin="20sp"
            android:background="@drawable/white_roundbtn"
            android:text="Sign Up"
            android:textAllCaps="false"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            android:textColor="@color/color_white"
            android:layout_marginLeft="20sp"/>
            <TextView
                android:id="@+id/tvGotoLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textStyle="bold"
                android:textColor="@color/color_white"
                android:layout_marginLeft="30sp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
</LinearLayout>