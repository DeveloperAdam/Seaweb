<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backimg"
    tools:context=".Activities.Fragment.Account.ResetPassFragment">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15sp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBackReset"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_gravity="center"
            android:src="@drawable/whiteback"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:textStyle="bold"
            android:textColor="@color/color_white"
            android:textSize="17sp"
            android:layout_gravity="center"
            android:layout_marginLeft="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

    <EditText
        android:id="@+id/etNewPass"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:backgroundTint="#fff"
        android:hint="New Password"
        android:layout_centerInParent="true"
        android:inputType="textPassword"
        android:layout_margin="20sp"
        android:textColorHint="@color/color_white"
        android:textColor="@color/color_white"/>
        <EditText
            android:id="@+id/etCnewPass"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:backgroundTint="#fff"
            android:hint="Confirm Password"
            android:layout_centerInParent="true"
            android:inputType="textPassword"
            android:layout_margin="20sp"
            android:textColorHint="@color/color_white"
            android:textColor="@color/color_white"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnReset"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:foreground="@drawable/ripple_effect_white_btn"
        android:layout_marginBottom="50sp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/white_roundbtn"
        android:text="Reset"
        android:textAllCaps="false"
        />
</RelativeLayout>
    <com.comix.overwatch.HiveProgressView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/progressReset"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        app:hive_animDuration="5000"
        app:hive_color="@color/colorAccent"
        app:hive_cornerRadius="20"
        app:hive_maxAlpha="255"
        app:hive_rainbow="false"
        app:hive_shrink="true" />
</FrameLayout>
</RelativeLayout>