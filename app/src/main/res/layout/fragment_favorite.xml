<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".Activities.Fragment.FavoriteFragment">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Favourite Boats"
          android:textColor="#757575"
          android:textStyle="bold"
          android:textSize="20sp"
          android:layout_marginTop="20sp"
          android:layout_marginLeft="20sp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
   <android.support.v7.widget.RecyclerView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:id="@+id/rvFavrt"
       android:layout_marginBottom="60sp"
       android:layout_marginTop="20sp"/>
<TextView
    android:layout_gravity="center"
    android:id="@+id/tvNofavrtboats"
    android:layout_width="wrap_content"
    android:visibility="gone"
    android:layout_height="wrap_content"
    android:text="No favourite boats"/>
        <com.comix.overwatch.HiveProgressView
            android:id="@+id/progressFvrtBoat"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            app:hive_animDuration="5000"
            app:hive_color="@color/colorAccent"
            app:hive_maxAlpha="255"
            app:hive_rainbow="false"
            app:hive_cornerRadius="20"
            app:hive_shrink="true"
            />
    </FrameLayout>
</LinearLayout>